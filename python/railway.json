{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pip install uv && uv sync"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "python -m uvicorn src.server.main:socket_app --host 0.0.0.0 --port $PORT",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  },
  "services": [
    {
      "name": "archon-server",
      "source": "./python",
      "startCommand": "python -m uvicorn src.server.main:socket_app --host 0.0.0.0 --port $PORT",
      "healthcheckPath": "/health",
      "envVars": {
        "SERVICE_DISCOVERY_MODE": "railway",
        "LOG_LEVEL": "INFO"
      }
    },
    {
      "name": "archon-mcp",
      "source": "./python",
      "startCommand": "python -m uvicorn src.mcp.server:app --host 0.0.0.0 --port $PORT",
      "healthcheckPath": "/health",
      "envVars": {
        "SERVICE_DISCOVERY_MODE": "railway",
        "TRANSPORT": "sse",
        "LOG_LEVEL": "INFO"
      }
    },
    {
      "name": "archon-agents",
      "source": "./python",
      "startCommand": "python -m uvicorn src.agents.server:app --host 0.0.0.0 --port $PORT",
      "healthcheckPath": "/health",
      "envVars": {
        "SERVICE_DISCOVERY_MODE": "railway",
        "LOG_LEVEL": "INFO"
      }
    }
  ]
}